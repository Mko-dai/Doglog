.index
  =render partial: "header"
  =render partial: "form-button"
  .blog
    = form_for(@tweet) do |f|
      %h1
        今日はなにがあったんだワン？
      = f.text_area :title, placeholder: "タイトル",cols:"50",rows:"1",class:"blog__title",value:"#{@tweet.title}"
      %br
        = f.text_area :text, placeholder: "本文",cols:"50",rows:"10",class:"blog__text",value:"#{@tweet.text}"
      %br
      =f.submit "Post", class: "btn btn-primary"